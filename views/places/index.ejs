<% layout('layouts/boilerplate') %>


    <h1>all tourist places </h1>

    <div>
        <a href="/places/new">Add place</a>
    </div>



    <% for (let place of places){%>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=place.images[0].url%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= place.title %>
                        </h5>
                        <p class="card-text">
                            <%= place.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= place.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/places/<%=place._id%>">View <%=place.title%>
                                </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>