<% layout('layouts/boilerplate') %>


    <h1>All Tourist Places </h1>
<!-- 
    <div>
        <a href="/places/new">Add place</a>
    </div> -->



    <% for (let place of places){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(place.images.length) {%>
                    <img class="img-fluid" alt="" src="<%=place.images[0].url%>">
                    <% }else {%>
                        <img src="https://res.cloudinary.com/dgu5orpv9/image/upload/v1625435725/TourGuide/yuyeh3bjyv1qjuwfrvrl.jpg" alt="" class="img-fluid">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= place.title %>
                        </h5>
                        <p class="card-text">
                            <%= place.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= place.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/places/<%=place._id%>">View <%=place.title%>
                                </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>